public class LinkedList<T> {
    private Link head;
    private Link tail;
    private int count = 0;

    public boolean isEmpty() {
        return head == null;
    }

    public int size() {
        return count;
    }

    // Insertion at the begging of the list
    public void insert(T element) {
        Link newEntry = new Link(element);

        if (isEmpty())
            tail = newEntry;
        newEntry.setNext(head);
        head = newEntry;
        count++;
    }

    // Insertion at the end of the list
    public void append(T element) {
        Link newEntry = new Link(element);

        if (isEmpty())
            head = newEntry;
        else
            tail.setNext(newEntry);
        tail = newEntry;
        count++;
    }

    public T remove() {
        if (!isEmpty()) {
            T temp = (T) head.getElement();
            if (head.getNext() == null)
                tail = null;
            head = head.getNext();
            count--;
            return temp;
        } else {
            System.out.println("The list is empty.");
            return null;
        }
    }
    
    public void removeAll() {
        head = null;
        tail = null;
        count = 0;
    }

    public T getFirst() {
        return (T)head.getElement();
    }

    public T getLast() {
        return (T)tail.getElement();
    }

    public T get(T key) {
        if (!isEmpty()) {
            Link current = head;
            while (!current.getElement().equals(key)) {
                if (current.getNext() == null)
                    return null;
                else
                    current = current.getNext();
            }
            return (T)current.getElement();
        } else {
            System.out.println("The list is empty.");
            return null;
        }
    }

    public void display() {
        if (!isEmpty()) {
            Link current = head;
            while (current != null) {
                System.out.printf("%s ", current);
                current = current.getNext();
            }
            System.out.println();
        } else
            System.out.println("The list is empty.");
    }
}
