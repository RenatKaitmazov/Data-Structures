package datastructures.linkedlist;

/**
 * Created by RenatKaitmazov on 08/05/15.
 */

public class Queue<T extends Comparable> {
    private static final String EMPTY_QUEUE = "The queue is empty";

    private LinkedList<T> queue = new LinkedList<>();

    public boolean isEmpty() { return queue.isEmpty(); }

    public int size() { return queue.size(); }

    public void display() { queue.display(); }

    public void enqueue(T element) { queue.append(element); }

    public T dequeue() {
        if (!isEmpty())
            return queue.delete().getData();
        else {
            System.out.println(EMPTY_QUEUE);
            return null;
        }
    }

    public T peek() {
        if (!isEmpty())
            return queue.getHead().getData();
        else {
            System.out.println(EMPTY_QUEUE);
            return null;
        }
    }
}
