package datastructures.linkedlist;

/**
 * Created by RenatKaitmazov on 08/05/15.
 */

public class Stack<T extends Comparable> {
    private static final String EMPTY_STACK = "The stack is empty";

    private LinkedList<T> stack = new LinkedList<>();

    public boolean isEmpty() { return stack.isEmpty(); }

    public int size() { return stack.size(); }

    public void display() { stack.display(); }

    public void push(T element) { stack.insert(element);}

    public T pop() {
        if (!isEmpty())
            return stack.delete().getData();
        else {
            System.out.println(EMPTY_STACK);
            return null;
        }
    }

    public T peek() {
        if (!isEmpty())
            return stack.getHead().getData();
        else {
            System.out.println(EMPTY_STACK);
            return null;
        }
    }
}
